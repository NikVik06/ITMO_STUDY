{
  "name": "purescript-web-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "spago build",
    "bundle": "spago bundle-app --to dist/app.js",
    "bundle-watch": "spago bundle-app --watch --to dist/app.js",
    "test": "spago test",
    "clean": "rm -rf .spago output dist",
    "dev": "npm run bundle-watch",
    "less:build": "lessc src/styles/main.less styles/style.css",
    "less:watch": "lessc --watch src/styles/main.less styles/style.css",
    "prettier:format": "prettier --write \"src/**/*.{js,purs,less}\" \"styles/*.css\"",
    "rollup:build": "rollup -c",
    "rollup:watch": "rollup -c -w",
    "build:rollup": "spago build && rollup -c",
    "format": "prettier --write \"src/**/*.{js,less}\" \"static/*.js\" \"static/styles/*.css\"",
    "format:check": "prettier --check \"src/**/*.{js,less}\" \"static/*.js\"",
    "dev:all": "concurrently \"npm run bundle-watch\" \"npm run less:watch\"",
    "build:all": "npm run less:build && npm run build:rollup"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.1",
    "rollup": "^4.0.0"
  },
  "dependencies": {
    "xhr2": "^0.2.1"
  }
}
